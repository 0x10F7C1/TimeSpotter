<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@drawable/dialog_shape">

    <TextView
        android:id="@+id/place_name_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place name"
        android:textSize="28sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/place_type_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place type"
        android:textSize="28sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/place_name_dialog"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/place_website_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place website"
        android:textSize="28sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/place_type_dialog"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/place_phone_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place phone"
        android:textSize="28sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/place_website_dialog"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/place_time_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place work time"
        android:textSize="28sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/place_phone_dialog"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/place_time_dialog"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="40dp">
        <ImageButton
            android:contentDescription="Name"
            android:id="@+id/place_name_dialog_star"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/empty_star"/>
        <ImageButton
            android:contentDescription="Type"
            android:id="@+id/place_type_dialog_star"
            android:layout_marginTop="15dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/empty_star"/>
        <ImageButton
            android:contentDescription="Website"
            android:id="@+id/place_website_dialog_star"
            android:layout_marginTop="15dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/empty_star"/>
        <ImageButton
            android:contentDescription="Phone"
            android:id="@+id/place_phone_dialog_star"
            android:layout_marginTop="15dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/empty_star"/>
        <ImageButton
            android:contentDescription="Time"
            android:id="@+id/place_time_dialog_star"
            android:layout_marginTop="15dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/empty_star"/>
    </LinearLayout>

    <Button
        android:id="@+id/rate_dialog_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/place_time_dialog"/>
    <Button
        android:id="@+id/close_dialog_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rate_dialog_btn"
        android:textSize="20sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>