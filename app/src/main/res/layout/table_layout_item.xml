<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/table_item_shape"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/table_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="@font/antic"
            android:text="Dummy username"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/table_place_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Nek mesto"
            android:fontFamily="@font/antic"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/table_place_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="@font/antic"
            android:text="Telefon"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/table_place_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="website"
            android:fontFamily="@font/antic"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/table_place_start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="otvara se u"
            android:fontFamily="@font/antic"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/table_place_close_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="@font/antic"
            android:text="zatvara se u"
            android:textColor="@color/black"
            android:textSize="20dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>